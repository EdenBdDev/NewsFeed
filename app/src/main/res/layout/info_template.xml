<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#9e000000"
    android:gravity="center"
    android:id="@+id/frame_id"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/movie_foter_big"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="center"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:background="#ffffff"
        android:src="@drawable/logo" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="5dp"
        android:background="#686868">

        <ImageView
            android:id="@+id/container_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/women" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center|top"
            android:id="@+id/news_container"
            android:orientation="vertical">
            <TextView
                android:id="@+id/movie_title_big"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center|top"
                android:text="@string/example_title"
                android:shadowColor="#000000"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="1.6"
                android:textColor="#ffffff"
                android:textSize="40.5dp" />

            <TextView
                android:id="@+id/movie_summery_big"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center|top"
                android:text="@string/example_title"
                android:shadowColor="#000000"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="5"
                android:textColor="#ffffff"
                android:textSize="17.5dp" />

            <TextView
                android:id="@+id/url_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center|bottom"
                android:text="@string/example_title"
                android:shadowColor="#000000"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="1.6"
                android:textColor="#fca800"
                android:textSize="20.5dp" />

        </LinearLayout>
    </FrameLayout>



</LinearLayout>
